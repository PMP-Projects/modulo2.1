<configuration>
    <property name="GELF_HOST" value="${GELF_HOST:127.0.0.1}" />
    <property name="GELF_PORT" value="${GELF_PORT:12201}" />
    <property name="SERVER_PORT" value="${SERVER_PORT:8080}" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %X{traceId:-} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- GELF UDP appender -->
    <appender name="GELF" class="de.siegmar.logbackgelf.GelfUdpAppender">
        <graylogHost>${GELF_HOST}</graylogHost>
        <graylogPort>${GELF_PORT}</graylogPort>
        <facility>auth-api</facility>
        <includeRawMessage>true</includeRawMessage>
        <includeMdcData>true</includeMdcData>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="GELF"/>
    </root>

</configuration>
